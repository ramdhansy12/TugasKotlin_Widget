<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sally" />
    <TextView
        android:id="@+id/txtText"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinslight"
        android:textStyle="bold"
        android:textColor="@color/birutua"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:text="Silahkan klik Lanjut untuk cek informasi Ramdhan Syaifulloh 311910014"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtText"
        android:layout_marginTop="25dp">
        
        <Button
            android:id="@+id/btnCancel"
            android:background="@drawable/btncancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnlanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnlanjut"
            android:textStyle="bold"
            android:text="Lanjut"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

    </LinearLayout>



</RelativeLayout>